{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 300,
  "title": "Number of Merchandise Exporters by Industry (2019-20)",
  "data": {
    "url": "data/Number of merchandise exporters, by industry of exporter.csv"
  },
  "mark": {
    "type": "bar",
    "color": "#ff9500",
    "cursor": "pointer"
  },
  "encoding": {
    "y": {
      "field": "Industry",
      "type": "nominal",
      "sort": {"field": "2019-20", "order": "descending"},
      "axis": {
        "title": "Industry",
        "labelLimit": 200,
        "labelFontSize": 11
      }
    },
    "x": {
      "field": "2019-20",
      "type": "quantitative",
      "axis": {
        "title": "Number of Exporters",
        "format": ",.0f",
        "labelFontSize": 11
      }
    },
    "tooltip": [
      {"field": "Industry", "type": "nominal", "title": "Industry"},
      {"field": "2019-20", "type": "quantitative", "title": "2019-20", "format": ","},
      {"field": "2018-19", "type": "quantitative", "title": "2018-19", "format": ","},
      {"field": "2017-18", "type": "quantitative", "title": "2017-18", "format": ","},
      {"field": "2016-17", "type": "quantitative", "title": "2016-17", "format": ","}
    ]
  }
}
